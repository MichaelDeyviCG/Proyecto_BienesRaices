extends ../layout/index
block contenido

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST" action='/auth/registro')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre  
                        input#nombre.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro  
                        input#nombre.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password  
                        input#nombre.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Repetir Password  
                        input#nombre.w-full.px-3.py-2.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir password" type="password" name="repetir_password")

                    
                    div.flex.items-center.justify-between
                        a.text-gray.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray.text-xs(href="/auth/olvide-password") Olvide mi password
                        
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-3 text-white font-bold" type="submit" value="Crear cuenta")